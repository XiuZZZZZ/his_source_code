{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      // "program": "${workspaceRoot}/build/build.js", //这个配置成你要调试的文件dev-server.js
      "program": "${workspaceRoot}/build/dev-server.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        //"NODE_ENV": "production" //  development
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "preLaunchTask": "",
      "sourceMaps": false,
      "outFiles": []
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858
    }
  ]
}